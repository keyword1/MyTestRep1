<aura:component implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
    <aura:attribute name="fNumber" type="integer" />
    <aura:attribute name="sNumber" type="integer" />
    <aura:attribute name="result" type="integer" />
    
    <lightning:input label="First Number" type="number" value="{!v.fNumber}" />
    <lightning:input label="second Number" type="number" value="{!v.sNumber}" />
    <lightning:button variant="brand" label="Addition" onclick="{!c.myAction}" />
    <div>{!v.result}</div>
</aura:component>